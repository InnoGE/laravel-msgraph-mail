# Microsoft Graph Mail Configuration

# Common configuration for both authentication methods
MICROSOFT_GRAPH_CLIENT_ID=your_client_id
MICROSOFT_GRAPH_CLIENT_SECRET=your_client_secret
MICROSOFT_GRAPH_TENANT_ID=your_tenant_id

# For Resource Owner Password Credentials authentication (when auth_method=password)
MICROSOFT_GRAPH_USERNAME=your_username@domain.com
MICROSOFT_GRAPH_PASSWORD=your_password

# Mail configuration
MAIL_FROM_ADDRESS=your_email@domain.com
MAIL_FROM_NAME="Your Name"
MAIL_SAVE_TO_SENT_ITEMS=false
